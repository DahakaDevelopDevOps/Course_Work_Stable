<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список тестов</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            color: #007bff;
        }

        .filter {
            margin-bottom: 20px;
        }

        .filter label {
            font-weight: bold;
        }

        .filter select {
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .filter button {
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .filter button:hover {
            background-color: #0056b3;
        }

        .test {
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .test-header {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .question {
            margin-bottom: 10px;
        }

        .answer {
            margin-left: 20px;
        }

        .delete-button {
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
        }

        .delete-button:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    {{> adminHeader}}
    <div class="container">
        <h1>Список тестов</h1>

        <!-- Фильтр по курсу -->
<div class="filter">
    <label for="courseFilter">Фильтр по курсу:</label>
    <select id="courseFilter">
        <option value="">Все курсы</option>
        {{#each courses}}
        <option value="{{this.course_name}}" {{#if (eq this.course_name ../selectedCourse)}}selected{{/if}}>{{this.course_name}}</option>
        {{/each}}
    </select>
    <button onclick="applyFilter()">Применить</button>
</div>

        <!-- Список тестов -->
        {{#each tests}}
        <div class="test">
            <div class="test-header">
                <h2>Тест ID: {{this.test_id}}</h2>
                <p>Курс: {{this.course.course_name}}</p>
                <p>Вопрос: {{this.question_text}}</p>
            </div>
            <ul>
                {{#each this.answers}}
                <li class="answer">
                    Ответ ID: {{this.answer_id}} - {{this.answer_text}} ({{#if this.is_correct}}верный{{else}}неверный{{/if}})
                </li>
                {{/each}}
            </ul>
            <button class="delete-button" onclick="deleteTest('{{this.test_id}}')">Удалить</button>
        </div>
        {{/each}}
    </div>

    <script>
        // Функция для применения фильтра
function applyFilter() {
    const courseFilter = document.getElementById('courseFilter').value;
    window.location.href = `/admin?courseName=${encodeURIComponent(courseFilter)}`;
}

        // Функция для удаления теста
        function deleteTest(testId) {
            if (confirm("Вы уверены, что хотите удалить этот тест?")) {
                fetch(`/admin/delete/test/${testId}`, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload(); // Перезагрузить страницу после успешного удаления
                        } else {
                            alert('Произошла ошибка при удалении теста.');
                        }
                    })
                    .catch(error => {
                        console.error('Ошибка при удалении теста:', error);
                        alert('Произошла ошибка при удалении теста.');
                    });
            }
        }
    </script>
</body>

</html>